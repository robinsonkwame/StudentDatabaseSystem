{
	"scheming_version": 1,
	"dataset_type": "saabreport",
	"about": "An auto-generated SAAB report",
	"about_url": "http://github.com/robinsax/ckanext-saabreports",
	"dataset_fields": [
		{
			"field_name": "title",
			"label": "Title",
			"preset": "title",
			"form_placeholder": "eg. A descriptive title"
		},
		{
			"field_name": "name",
			"label": "URL",
			"preset": "dataset_slug",
			"form_placeholder": "eg. my-dataset"
		}
	],
	"resource_fields": [
		{
			"field_name": "url",
			"label": "URL",
			"preset": "resource_url_upload"
		},
		{
			"field_name": "name",
			"label": "Name",
			"form_placeholder": "eg. January 2011 Gold Prices"
		},
		{
			"field_name": "description",
			"label": "Description",
			"form_snippet": "markdown.html",
			"form_placeholder": "Some useful notes about the data"
		},
		{
			"field_name": "format",
			"label": "Format",
			"preset": "resource_format_autocomplete"
		}
	]
}